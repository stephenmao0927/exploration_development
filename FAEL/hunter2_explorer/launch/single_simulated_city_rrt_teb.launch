<!-- run RViz node (visualization) -->
<node pkg="rviz" type="rviz" name="rviz" args="-d $(find hunter2_explorer)/launch/include/rviz_config/test_rrt.rviz">
	<remap from="move_base_simple/goal" to="robot_1/move_base_simple/goal"/>
</node>

