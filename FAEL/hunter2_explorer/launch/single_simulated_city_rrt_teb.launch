<launch>
<!--
Launch file for running the multirobot simulation on gazebo
-->
<include file="$(find gazebo_ros)/launch/empty_world.launch">
<arg name="use_sim_time" value="true"/>
<arg name="debug" value="false"/>
<arg name="gui" value="true"/>
<arg name="world_name" value="$(find hunter2_explorer)/world/city.world"/>
</include>

<!-- spawn robot 1-->
<!-- 阿克曼驱动 -->
<group ns="/robot_1">
	<include file="$(find hunter2_explorer)/launch/include/robot_new_ackermann.launch">
		<arg name="robot_name" value="robot_1"/>
		<arg name="init_pose" value="-x -5.0 -y -140 -z 0.5"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_base_exploration_ackermann.launch">
		<arg name="namespace" value="robot_1"/>
	</include> 
</group>
