<launch>
<!--
Launch file for running the multirobot simulation on gazebo
-->
<param name="robot_1/goal" value=""/>
<param name="robot_3/goal" value=""/>
<param name="robot_2/goal" value=""/>
<param name="robot_1/radius" value=""/>
<param name="robot_3/radius" value=""/>
<param name="robot_2/radius" value=""/>
<!-- <param name="robot_1/new_path_ready" value="not"/>
<param name="robot_2/new_path_ready" value="not"/>
<param name="robot_3/new_path_ready" value="not"/> -->

<include file="$(find gazebo_ros)/launch/empty_world.launch">
<arg name="use_sim_time" value="true"/>
<arg name="debug" value="false"/>
<arg name="gui" value="true"/>
<arg name="world_name" value="$(find hunter2_explorer)/world/tunnel.world"/>
</include>

<!-- spawn robot 1-->
<group ns="/robot_1">
	<include file="$(find hunter2_explorer)/launch/include/robot.launch">
		<arg name="robot_name" value="robot_1"/>
		<arg name="init_pose" value="-x 0.0 -y 0.0 -z 0.4"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_1"/>
	</include> 
</group>

<!-- spawn robot 2 -->
<!-- <group ns="/robot_2">
