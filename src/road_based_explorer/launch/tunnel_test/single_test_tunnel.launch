	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_2"/>
	</include> 
</group> -->

<node pkg="tf" type="static_transform_publisher" name="robot2_to_robot1" args="0 15.0 0 0 0 0 /robot_1/map /robot_2/map 20" />
<include file="$(find hunter2_explorer)/launch/include/map_merge.launch"/>

<node pkg="new_detector" type="detector.py" name="detector1" output="screen">
	<param name="costmap_topic" value="robot_1/map"/>
	<param name="odometry_topic" value="/robot_1/odom"/>
</node>


