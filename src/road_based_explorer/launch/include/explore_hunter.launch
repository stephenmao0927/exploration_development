<launch>

<arg name="robot_name" default="/"/>

<node pkg="explore_lite" type="explore" respawn="false" name="explore" output="screen">
  <param name="robot_base_frame" value="$(arg robot_name)/base_link"/>
  <param name="costmap_topic" value="/$(arg robot_name)/move_base_node/global_costmap/costmap"/>
  <param name="move_base_service" value="/$(arg robot_name)/move_base"/>
  <param name="robot_name" value="$(arg robot_name)"/>
  <param name="costmap_updates_topic" value="/"/>
  <param name="visualize" value="true"/>
  <!-- set whether to visulize frontier and exploration point infomation -->
  <param name="planner_frequency" value="0.40"/>
  <param name="progress_timeout" value="15.0"/>
  <param name="potential_scale" value="3.0"/>
  <param name="orientation_scale" value="0.0"/>
  <param name="gain_scale" value="1.0"/>
  <param name="transform_tolerance" value="0.3"/>
  <param name="min_frontier_size" value="0.60"/>
</node>
</launch>