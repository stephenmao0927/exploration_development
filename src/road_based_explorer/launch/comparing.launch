<?xml version="1.0"?>
<launch>
<!--
Launch file for running the simulation on gazebo
-->
<include file="$(find gazebo_ros)/launch/empty_world.launch">
<arg name="use_sim_time" value="true"/>
<arg name="debug" value="false"/>
<arg name="gui" value="true"/>
<arg name="world_name" value="$(find hunter2_explorer)/world/tunnel.world"/>
</include>

<!-- spawn robot 1-->
<group ns="/robot_1">
	<include file="$(find hunter2_explorer)/launch/include/robot.launch">
		<arg name="robot_name" value="robot_1"/>
		<arg name="init_pose" value="-x -0.5 -y 0.0 -z 0.4"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_1"/>
	</include> 
</group>

<node pkg="rviz" type="rviz" name="rviz" args="-d $(find hunter2_explorer)/launch/include/rviz_config/single.rviz">
<remap from="move_base_simple/goal" to="robot_1/move_base_simple/goal"/>
</node>

</launch>