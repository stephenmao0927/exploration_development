<launch>
<!--
Launch file for running the multirobot simulation on gazebo
-->
<include file="$(find gazebo_ros)/launch/empty_world.launch">
<arg name="use_sim_time" value="true"/>
<arg name="debug" value="false"/>
<arg name="gui" value="true"/>
<arg name="world_name" value="$(find hunter2_explorer)/world/garage.world"/>
</include>


<!-- spawn robot 1-->
<group ns="/robot_1">
	<include file="$(find hunter2_explorer)/launch/include/robot.launch">
		<arg name="robot_name" value="robot_1"/>
		<arg name="init_pose" value="-x 0.0 -y 0.0 -z 0.4"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_1"/>
	</include> 
</group>

<!-- spawn robot 2-->
<group ns="/robot_2">
	<include file="$(find hunter2_explorer)/launch/include/robot.launch">
		<arg name="robot_name" value="robot_2"/>
		<arg name="init_pose" value="-x -2 -y 0.0 -z 0.4"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_2"/>
	</include> 
</group>

<!-- spawn robot 3-->
<group ns="/robot_3">
	<include file="$(find hunter2_explorer)/launch/include/robot.launch">
		<arg name="robot_name" value="robot_3"/>
		<arg name="init_pose" value="-x 2 -y -0.0 -z 0.4"/>
	</include>
	<include file="$(find hunter2_explorer)/launch/include/move_baseSafe.launch">
		<arg name="namespace" value="robot_3"/>
	</include> 
</group>


<!-- transformation between robots-->
<node pkg="tf" type="static_transform_publisher" name="robot2_to_robot1" args="-2 0 0 0 0 0 /robot_1/map /robot_2/map 20" />
<node pkg="tf" type="static_transform_publisher" name="robot3_to_robot1" args="2 0 0 0 0 0 /robot_1/map /robot_3/map 20" />

<!-- Map megring (know inital position case)-->
<include file="$(find hunter2_explorer)/launch/include/initposes.launch"/>
<include file="$(find hunter2_explorer)/launch/include/map_merge.launch"/>



<!-- run RViz node (visualization) -->
<node pkg="rviz" type="rviz" name="rviz" args="-d $(find hunter2_explorer)/launch/include/rviz_config/three_hunters.rviz">
<remap from="move_base_simple/goal" to="robot_1/move_base_simple/goal"/>
</node>


</launch>
